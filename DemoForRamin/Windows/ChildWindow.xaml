<Window x:Class="DemoForRamin.Windows.ChildWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DemoForRamin.Windows"
        mc:Ignorable="d"
        Title="ChildWindow" Height="600" Width="800"
        Loaded="Window_Loaded">

    <Grid>
        <Border BorderBrush="Gray" CornerRadius="10" BorderThickness="10">
            <StackPanel Orientation="Vertical" Margin="50">
                <TextBlock Width="500" Height="200" Text="{Binding LogMessage, Mode=TwoWay}" TextWrapping="Wrap" FontSize="20"></TextBlock>
                <Button Width="100" Height="100" Margin="20" Content="Open dialog" Click="Button_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
